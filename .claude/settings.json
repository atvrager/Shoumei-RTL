{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/scripts/setup-env.sh"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "network": {
      "allowedDomains": [
        "github.com",
        "*.github.com",
        "*.githubusercontent.com",
        "registry.npmjs.org",
        "repo1.maven.org",
        "*.coursier.io",
        "raw.githubusercontent.com",
        "pypi.org",
        "files.pythonhosted.org",
        "astral.sh",
        "static.lean-lang.org",
        "reservoir.lean-lang.org",
        "leanprover-community.github.io",
        "*.scala-sbt.org",
        "*.typesafe.com",
        "*.scala-lang.org",
        "releases.lean-lang.org"
      ]
    }
  }
}
